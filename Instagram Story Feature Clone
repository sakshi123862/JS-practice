  <body>
    <div id="card">
      <div id="full-screen"></div>
      <div id="storya"></div>
    </div>

    <script>
      var arr = [
        {
          dp: "https://media.easy-peasy.ai/27feb2bb-aeb4-4a83-9fb6-8f3f2a15885e/555bc082-cfe1-4c29-ae88-ae624b58ed8b.png",
          story:
            "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRCL6orf9_4VBeQFZsFTK5FqAjt-2fOVq9SUQ&s",
        },
        {
          dp: "https://wallpapersok.com/images/high/winking-cute-girl-shen9t2b3lrcv8he.jpg",
          story:
            "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSpzstEffwW_QjcKxtJD9UnsvyLctxeGYgPnw&s",
        },
        {
          dp: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR6cEw4T14lUFd9iut7JszP8Vi2YEsLkeLUPQ&s",
          story:
            "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS9oInSaE78UtQMNQu9wV3c-WxpXgz-cPFEpg&s",
        },
        {
          dp: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS10HZXQURGHP3Xh9up4517xnnHTf30g09bag&s",
          story:
            "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT_LnKzDJxSMiHMbxhBPaE76WToT5bwDJG9FQ&s",
        },
      ];

      var storya = document.querySelector("#storya");

      var clutter = "";
      arr.forEach(function (elem, idx) {
        clutter += ` <div class="story">
          <img id="${idx}" src="${elem.dp}" alt="" >
        </div>`;
      });

      storya.innerHTML = clutter;

      storya.addEventListener("click", function (dets) {
        document.querySelector("#full-screen").style.display = "block";

        document.querySelector("#full-screen").style.backgroundImage = `url(${
          arr[dets.target.id].story
        })`;

        setTimeout(function () {
          document.querySelector("#full-screen").style.display = "none";
        }, 3000);
      });

    </script>
