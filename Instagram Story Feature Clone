      #card {
        height: 420px;
        width: 270px;
        background-color: white;
        border-radius: 15px;
        border: 3px solid black;
        position: relative;
        overflow: hidden;
      }

      #storya {
        height: 120px;
        width: 100%;
        border-bottom: 1px solid #dadadada;
        padding: 15px;
        white-space: nowrap;
        overflow-x: auto;
        overflow-y: hidden;
      }

      #storya::-webkit-scrollbar {
        display: none;
      }

      .story {
        border: 3px solid rgb(230, 14, 14);
        height: 90px;
        width: 90px;
        border-radius: 50%;
        overflow: hidden;
        display: inline-block;
      }

      .story img {
