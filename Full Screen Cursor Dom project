  <div id="main">
    <h1>Hello</h1>
  </div>

  <div class="cursor"></div> 

  <script>
    var crsr = document.querySelector(".cursor")

    document.addEventListener("mousemove", function(dets) {
      crsr.style.left = dets.clientX + "px";
      crsr.style.top = dets.clientY + "px";
    })

  </script>
